<h2>Your Order</h2>
<table id="cart-table" class="item-list">
  <thead>
    <tr>
      <th class="section-header">PLANT</th>
      <th class="section-header">PRICE</th>
      <th class="section-header">QTY</th>
      <th class="section-header">TOTAL</th>
    </tr>
  </thead>
  <tbody>
    <% @order_items.each do |oi| %>
      <tr class="cart-row">
        <td class="item-details">
          <div class="item-image">
            <%= cl_image_tag oi.plant.photo.path, width: 200, height: 300, crop: :fill %>
          </div>
          <div class="item-name">
            <%= oi.plant.common_name %>
          </div>
        </td>
        <td class="item-details">
          <div class="item-price">
            $ <%= oi.unit_price %>
          </div>
        </td>
        <td class="item-details">
          <div class="item-qty">
            <%= oi.quantity %>
          </div>
        </td>
        <td class="item-details">
          <div class="item-total">
            $ <%= oi.total_price %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="cart-footer">
  <div class="cart-order-totals">
    <%= render 'order_totals_table', order: current_order %>
  </div>
</div>




