<div>
  <%= simple_form_for([order, address], remote: true) do |f| %>
    <%= f.error_notification %>
    <div class="col-sm-6">
      <%= f.input :first_name, placeholder: 'First Name' %>
    </div>
    <div class="col-sm-6 offset-sm-6">
      <%= f.input :last_name, placeholder: 'Last Name' %>
    </div>
    <div class="col-sm-12">
      <%= f.input :street_address, placeholder: 'Address' %>
    </div>
    <div class="col-sm-6">
      <%= f.input :city, placeholder: 'City' %>
      <%= f.input :postal_code, placeholder: 'Postal Code'%>
    </div>
    <div class="col-sm-6 offset-sm-6">
      <%= f.input :country, collection: ["Canada", "United States"] %>
      <%= f.input :phone_number, as: :tel, placeholder: 'Phone Number' %>
    </div>
  <% end %>
</div>
