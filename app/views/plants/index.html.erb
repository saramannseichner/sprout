<div class="plants-container">
  <div class="cards">
    <% @plants.each_slice(2) do |plants| %>
      <div class="card-row">
        <% plants.each do |plant| %>
          <div class="col-xs-12 col-md-6 no-gutter" >
            <%= render partial: 'components/plant', locals: { plant: plant, height: "700px" } %>
          </div>
         <% end %>
        <div class="w-100"></div>
      </div>
    <% end %>
  </div>
</div>

