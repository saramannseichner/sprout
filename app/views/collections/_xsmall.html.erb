<div class="collection-container">
  <% results = [] %>
  <% plants.each do |plant| %>
    <% if plant.size == 1 %>
        <% results << plant %>
    <% end %>
  <% end %>
  <div class="collection-header">
    <h3>PERFECT FOR YOUR DESK</h3>
    <%= link_to  "SEE ALL >", '#'%>
  </div>
  <div class="collection-results">
    <%= render partial: 'components/plant', collection: results[0..3], as: :plant, locals: { card_height: "400px", img_height: 300, pos: "1" } %>
  </div>
</div>
