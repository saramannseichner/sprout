<div class="collection-container">
  <h3>IMPOSSIBLE TO KILL</h3>
  <% results = [] %>
  <% plants.each do |plant| %>
    <% if plant.care_level == 1 %>
        <% results << plant %>
    <% end %>
  <% end %>
  <div class="collection-results">
    <%= render partial: 'components/plant', collection: results[0..3], as: :plant, locals: { card_height: "400px", img_height: 300, pos: "1" } %>
  </div>
</div>
