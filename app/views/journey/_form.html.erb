<%= form_with scope: :post, remote: true, url: journey_path do |f| %>
<div class="size">
  <span class= "title">  <h1>What size of plant are you looking for? </h1> </span>
</div>
      <div class = "size-content">
        <%= radio_button_tag(:size, 4) %>
        <%= label_tag(:size_large, "Large") %>
        <%= image_tag "floor_lamp.png", :class => "size-image"%>
      </div>
      <div class = "size-content">
        <%= radio_button_tag(:size, 3) %>
        <%= label_tag(:size_medium, "Medium") %>
        <%= image_tag "shelf .png", :class => "size-image"%>
      </div>
      <div class = "size-content">
        <%= radio_button_tag(:size, 2) %>
        <%= label_tag(:size_small, "Small") %>
        <%= image_tag "desk.png", :class => "size-image"%>
      </div>
      <div class = "size-content">
        <%= radio_button_tag(:size, "nil") %>
        <%= label_tag(:suspended, "Hanging") %>
        <%= image_tag "hanging_plant.png", :class => "size-image"%>
      </div>
      <div class = "size-content">
        <%= radio_button_tag(:size, 0) %>
        <%= label_tag(:no_pref, "Don't Care") %>
        <%= image_tag "homepage-question.png", :class => "size-image"%>
      </div>
      <div class = "size-content">
      <%= f.submit "Next", class: "next btn" %>
    </div>
</div>

<div class="sun default-hidden">
  Sun:  <%= radio_button_tag(:sun, 3) %>
        <%= label_tag(:sun_full, "Lots of sun!") %>
        <%= image_tag "sun.png"%>
        <%= radio_button_tag(:sun, 2) %>
        <%= label_tag(:sun_partial, "A bit of sun.") %>
        <%= image_tag "sun-and-cloud.png"%>
        <%= radio_button_tag(:sun, 1) %>
        <%= label_tag(:sun_none, "No sun") %>
        <%= image_tag "cloud.png"%>
      <%= f.submit "Next", class: "next btn" %>
</div>
<div class="care default-hidden">
  Care: <%= radio_button_tag(:care, 1) %>
        <%= label_tag(:care_easy, "Easy") %>
        <%= radio_button_tag(:care, 2) %>
        <%= label_tag(:care_medium, "Medium") %>
        <%= radio_button_tag(:care, 3) %>
        <%= label_tag(:care_hard, "Hard") %>
        <div id="slidecontainer">
          <input type="range" min="1" max="100" value="50" class="slider" id="myRange">
        </div>
  <%= f.submit "Submit", class: "next btn" %>
</div>
<% end %>

<!-- We need to render results  -->
<div id="results">

</div>

<script>
  const buttons = document.body.querySelectorAll('.next');
  for (var i = 0; i < buttons.length; i++) {
    buttons[i].addEventListener('click', (event) => {
      console.log("hey");
      $(event.currentTarget).parent().hide();
      $(event.currentTarget).parent().next().show();
      });
    }

    var slider = document.getElementById("myRange");
    var output = document.getElementById("demo");
    output.innerHTML = slider.value; // Display the default slider value

    // Update the current slider value (each time you drag the slider handle)
    slider.oninput = function() {
        output.innerHTML = this.value;
    }
</script>
